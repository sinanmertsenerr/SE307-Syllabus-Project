@model List<SyllabusApp.Models.Syllabus>

<div class="d-flex justify-content-between align-items-center mb-4 mt-2">
    <div>
        <h2 class="fw-bold text-dark"><i class="bi bi-grid-fill"></i> Course Catalog</h2>
        <p class="text-muted mb-0">Manage and view course syllabi</p>
    </div>
    
    <div>
        @if(ViewBag.User != null && ViewBag.User.Role == "Instructor") 
        {
            <a href="/Syllabus/Create" class="btn btn-success shadow-sm">
                <i class="bi bi-plus-lg"></i> Add New Course
            </a>
        }
    </div>
</div>

<div class="row">
    @if(Model.Count == 0)
    {
        <div class="col-12 text-center mt-5">
            <div class="alert alert-warning">No courses found. Please add a course.</div>
        </div>
    }

    @foreach (var c in Model) {
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm border-0 hover-effect">
                <div class="card-body d-flex flex-column">
                    
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <h5 class="text-primary fw-bold mb-0">@c.CourseCode</h5>
                        <span class="badge bg-light text-dark border">@c.Semester</span>
                    </div>
                    
                    
                    <h6 class="text-dark fw-bold mb-2">@c.CourseName</h6>
                    
                    
                    @if(!string.IsNullOrEmpty(c.Description))
                    {
                        <p class="card-text text-muted small text-truncate mb-3">@c.Description</p>
                    }
                    else
                    {
                        <div class="mb-3"></div>
                    }
                    
                    
                    <div class="mt-auto d-flex justify-content-between align-items-center">
                        <span class="badge bg-info text-dark"><i class="bi bi-book"></i> ECTS: @c.ECTS</span>
                        
                        <a href="/Syllabus/Details?id=@c.CourseCode" class="btn btn-sm btn-outline-primary stretched-link">
                            View Details <i class="bi bi-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .hover-effect { transition: transform 0.2s, box-shadow 0.2s; }
    .hover-effect:hover { 
        transform: translateY(-5px); 
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15)!important;
    }
</style>